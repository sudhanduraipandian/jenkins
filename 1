.PHONY: all touch
#.DEFAULT_GOAL := mkdir

# variable declaration
home_dir :=~/Office/alphav/tutorials/make-tut
folder_name="myfolder"
steps := echo mkdir


all: echo mkdir build

echo:
        @echo "first rule"
mkdir:
        mkdir $(home_dir)/myfolder

touch:
        cd $(home_dir)/myfolder && ls -ltr  >> myfile
rmdir:
        @echo "removing directory $(home_dir)/myfolder "
        rm -rf $(home_dir)/myfolder

build: $(addprefix build-,$(steps))
        @echo "build information : (addprefix build-,$(steps))"
build-%:
        @echo ''
        @echo 'step name : $*'

steplist:
        for step in $(steps); do \
          echo "this is step : $$step" ; \
        done
